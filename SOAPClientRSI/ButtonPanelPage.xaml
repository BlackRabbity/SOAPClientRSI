<Page x:Class="SOAPClientRSI.ButtonPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOAPClientRSI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ButtonPanelPage">

    <Grid>
        <StackPanel Name="ButtonPanel" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Template="{StaticResource TransparentButtonTemplate}" FontFamily="UI/Smiles.otf#Smiles" FontSize="60" Content="Films" Margin="40 10 40 0" Background="Transparent" Click="Button_Click" />
            <Button Template="{StaticResource TransparentButtonTemplate}" FontFamily="UI/Smiles.otf#Smiles" FontSize="60" Content="Price List" Margin="40 10 40 0" Background="Transparent" Click="Button_Click_1"/>
            <Button Template="{StaticResource TransparentButtonTemplate}" FontFamily="UI/Smiles.otf#Smiles" FontSize="60" Content="Your Reservation" Margin="40 10 40 0" Background="Transparent" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Page>
